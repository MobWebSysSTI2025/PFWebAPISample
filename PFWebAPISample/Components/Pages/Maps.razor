@page "/maps"
<h3>Maps</h3>
<div id='map' style="position: relative; width: 100%; height: 85vh; display: block; border: 1px solid pink; "></div>

<script>
	
    //Page Load
	$(function(){
	
		const map = L.map('map').setView([51.5, -0.09], 13);

		L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
			attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
		}).addTo(map);


		const mGreen = L.marker([51.5, -0.09]).bindPopup('I am a green leaf.').addTo(map);
		const mRed = L.marker([51.495, -0.083]).bindPopup('I am a red leaf.').addTo(map);
		const mOrange = L.marker([51.49, -0.1]).bindPopup('I am an orange leaf.').addTo(map);


	});
</script>
